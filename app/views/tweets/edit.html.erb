<html>
    <body>
        
      <div class = "main">
        <div class = "pageSub">
            <%= render 'layouts/form' %>
            <% if @tweet.errors.present? %>
          <h3>エラーがあります。</h3>
          <ul>
            <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
          <% end %>
        </div>
        <div class = "pageBody">
          
          <%= form_for @tweet ,url: {action: :update} do |t| %>
          <%= t.label :message ,"投稿内容" %>
          <br>
          <%= t.text_area :message, size: "50x20" , class: "form-control"  %>
          <br>
          <%= t.submit 'ツイートを更新する' ,class: 'submit'%>
          <% end %>
        </div>
      </div>
    </body>  
</html>